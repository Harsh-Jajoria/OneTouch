<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.axepert.onetouch.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_nav_blog"
            app:destination="@id/nav_blog"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_serviceDetailsFragment"
            app:destination="@id/serviceDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_sellerDetailsFragment"
            app:destination="@id/sellerDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_allServicesFragment"
            app:destination="@id/allServicesFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_blogInfoFragment"
            app:destination="@id/blogInfoFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_allSellersFragment"
            app:destination="@id/allSellersFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_allServiceProvidersFragment"
            app:destination="@id/allServiceProvidersFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_home_to_productByCategoryFragment"
            app:destination="@id/productByCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_blog"
        android:name="com.axepert.onetouch.ui.blog.BlogFragment"
        android:label="fragment_blog"
        tools:layout="@layout/fragment_blog">
        <action
            android:id="@+id/action_nav_blog_to_nav_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_nav_blog_to_blogInfoFragment"
            app:destination="@id/blogInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_professional"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.ECommerceFragment"
        android:label="fragment_become_professional"
        tools:layout="@layout/fragment_become_professional">
        <action
            android:id="@+id/action_nav_professional_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
        <action
            android:id="@+id/action_nav_professional_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right"/>
        <action
            android:id="@+id/action_nav_professional_to_productByCategoryFragment"
            app:destination="@id/productByCategoryFragment" />
        <action
            android:id="@+id/action_nav_professional_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_nav_professional_to_productListFragment"
            app:destination="@id/productListFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_account"
        android:name="com.axepert.onetouch.ui.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_nav_account_to_addressesFragment"
            app:destination="@id/addressesFragment" />
        <action
            android:id="@+id/action_nav_account_to_myOrdersFragment"
            app:destination="@id/myOrdersFragment" />
        <action
            android:id="@+id/action_nav_account_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_nav_account_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.axepert.onetouch.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_searchFragment_to_productByCategoryFragment"
            app:destination="@id/productByCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/serviceDetailsFragment"
        android:name="com.axepert.onetouch.ui.services.ServiceDetailsFragment"
        android:label="fragment_service_details"
        tools:layout="@layout/fragment_service_details">
        <action
            android:id="@+id/action_serviceDetailsFragment_to_bookServiceFragment2"
            app:destination="@id/bookServiceFragment2"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/bookServiceFragment2"
        android:name="com.axepert.onetouch.ui.bookservice.BookServiceFragment"
        android:label="fragment_book_service"
        tools:layout="@layout/fragment_book_service" />
    <fragment
        android:id="@+id/sellerDetailsFragment"
        android:name="com.axepert.onetouch.ui.sellerdetails.SellerDetailsFragment"
        android:label="fragment_seller_details"
        tools:layout="@layout/fragment_seller_details" />
    <fragment
        android:id="@+id/allServicesFragment"
        android:name="com.axepert.onetouch.ui.services.AllServicesFragment"
        android:label="fragment_all_services"
        tools:layout="@layout/fragment_all_services">
        <action
            android:id="@+id/action_allServicesFragment_to_serviceDetailsFragment"
            app:destination="@id/serviceDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/blogInfoFragment"
        android:name="com.axepert.onetouch.ui.blog.BlogInfoFragment"
        android:label="fragment_blog_info"
        tools:layout="@layout/fragment_blog_info" >
        <action
            android:id="@+id/action_blogInfoFragment_to_addBlogFragment"
            app:destination="@id/addBlogFragment" />
    </fragment>
    <fragment
        android:id="@+id/allSellersFragment"
        android:name="com.axepert.onetouch.ui.sellerdetails.AllSellersFragment"
        android:label="fragment_all_sellers"
        tools:layout="@layout/fragment_all_sellers">
        <action
            android:id="@+id/action_allSellersFragment_to_sellerDetailsFragment"
            app:destination="@id/sellerDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/allServiceProvidersFragment"
        android:name="com.axepert.onetouch.ui.serviceproviders.AllServiceProvidersFragment"
        android:label="fragment_all_service_providers"
        tools:layout="@layout/fragment_all_service_providers" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.axepert.onetouch.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" />
    <fragment
        android:id="@+id/productByCategoryFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.ProductByCategoryFragment"
        android:label="fragment_product_by_category"
        tools:layout="@layout/fragment_product_by_category" >
        <action
            android:id="@+id/action_productByCategoryFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addressesFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.AddressesFragment"
        android:label="fragment_addresses"
        tools:layout="@layout/fragment_addresses" >
        <action
            android:id="@+id/action_addressesFragment_to_addAddressFragment"
            app:destination="@id/addAddressFragment" />
        <action
            android:id="@+id/action_addressesFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAddressFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.AddAddressFragment"
        android:label="fragment_add_address"
        tools:layout="@layout/fragment_add_address" />
    <fragment
        android:id="@+id/myOrdersFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.MyOrdersFragment"
        android:label="fragment_my_orders"
        tools:layout="@layout/fragment_my_orders" >
        <action
            android:id="@+id/action_myOrdersFragment_to_invoiceFragment"
            app:destination="@id/invoiceFragment" />
        <action
            android:id="@+id/action_myOrdersFragment_to_addressesFragment"
            app:destination="@id/addressesFragment" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.axepert.onetouch.ui.account.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.axepert.onetouch.ui.account.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.axepert.onetouch.ui.checkout.CheckOutFragment"
        android:label="fragment_check_out"
        tools:layout="@layout/fragment_check_out" >

        <action
            android:id="@+id/action_checkOutFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/productListFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.ProductListFragment"
        android:label="fragment_product_list"
        tools:layout="@layout/fragment_product_list" />
    <fragment
        android:id="@+id/invoiceFragment"
        android:name="com.axepert.onetouch.ui.ecommerce.fragments.InvoiceFragment"
        android:label="fragment_invoice"
        tools:layout="@layout/fragment_invoice" />
    <fragment
        android:id="@+id/addBlogFragment"
        android:name="com.axepert.onetouch.ui.blog.AddBlogFragment"
        android:label="fragment_add_blog"
        tools:layout="@layout/fragment_add_blog" />
</navigation>